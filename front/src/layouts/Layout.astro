
---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Soy Santiago Delebecq, desarrollador web full stack  fusiono pasión y habilidades en cada proyecto. Descubre mis logros y habilidades en desarrollo web. ¡Bienvenido/a a mi mundo digital!"
    />
    <link rel="icon" type="image/svg+xml" href="/avatar.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  
  :root {
    --title: 3rem;
    --subTitle: 2rem;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: "Noto Sans", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    background-color: #0a0f1a;
    max-width: 1000px;
    margin: 0 auto;
  }
  image {
    display: block;
    min-width: 100%;
  }
  h1 {
    font-size: var(--title);
    font-weight: bold;
  }
  h2 {
    font-size: var(--subTitle);
    font-weight: bold;
  }
  h3 {
    font-size: 1.6rem;
    font-weight: bold;
  }
  p {
    font-size: 1.2rem;
  }
  a {
    text-decoration: none;
    cursor: pointer;
  }
</style>