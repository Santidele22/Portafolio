---
import { Image } from 'astro:assets';
import {proyects} from "../utils/proyects.js"

---

<article class="grid auto-rows-[300px] grid-cols-3 gap-4 max-w-full max-h-full text-white">
    {proyects.map((proyect, i) => (
      <section
        class={`row-span-1 rounded-xl border-2 border-slate-400/10 bg-color3 p-4 dark:bg-neutral-900 ${
          i === 3 || i === 0 ? "col-span-2 " : i === 4 ? "col-span-3" : ""
        }`}
      >
      <header class="w-full h-full flex flex-col-reverse">
        <h3 class="text-lg ">{proyect.title}</h3>
        <div class="lex gap-2 items-center mb-1">
            {proyect.tech?.map((technology) => {
                {console.log(technology)}
               <img src={technology} />
            })}
            </div>
       </header>

      </section>
    ))}
  </article>